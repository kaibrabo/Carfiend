<h5>
    <strong>Posts:</strong>
</h5>

<% @posts.each do |post| %>
    <div class="row">
        <div class="post_image">
            <%= link_to (image_tag post.image.url(:medium)), post_path(post)%>
        </div>
        <p>
            <%= post.caption %>
        </p>
        <%= link_to "Edit Post", edit_post_path(post) %> | 
        <%= link_to "Delete Post", method: :delete, data: { confirm: "Are you sure?"} %>
    </div>
<% end %>
